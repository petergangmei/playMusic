<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context=".ProductActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/tool">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_shopping_cart"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="4"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/cartCount"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginRight="-2dp"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/tool">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingBottom="30dp"
           android:paddingStart="20dp"
           android:paddingLeft="20dp"
           android:paddingEnd="20dp"
           android:paddingRight="20dp"
           android:layout_below="@id/tool">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/lay1"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:orientation="vertical">
<!--shop location-->
               <TextView
                   android:id="@+id/sallerLocation"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textColor="@color/colorDark"
                   android:textSize="16dp" />
<!--               title-->
               <TextView
                   android:id="@+id/title"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textSize="18dp" />
           </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="300dp"
               android:layout_margin="5dp"
               android:src="@drawable/picture"
               android:layout_below="@id/lay1"
               android:id="@+id/imageView"/>

<!--           mrp-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_weight="4">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:text="M.R.P.: "/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:textColor="@color/colorDark"
                       android:textSize="14sp"
                       android:text="@string/rupee"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:text=""
                       android:textColor="@color/colorDark"
                       android:id="@+id/MRPprice"/>
               </LinearLayout>
           </LinearLayout>
<!--            discounted price-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_weight="4">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:text="Price: "/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="14sp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:textColor="@color/colorDark"
                       android:text="@string/rupee"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:text=""
                       android:textColor="@color/colorDark"
                       android:id="@+id/DISCOUNTEDprice"/>
               </LinearLayout>
           </LinearLayout>
<!--                your saving-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_weight="4">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:text="You save: "/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="14sp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:textColor="@color/colorDark"
                       android:text="@string/rupee"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textSize="14sp"
                       android:textColor="@color/colorDark"
                       android:id="@+id/SAVEprice"/>
               </LinearLayout>
           </LinearLayout>
<!--all taxes included-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_weight="4">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:text=""/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="14sp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Inclusive of all taxes"
                       android:textSize="14sp"
                       android:textColor="@color/colorDark"
                       />
               </LinearLayout>
           </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#F4EFEF"
              android:padding="5dp"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="5dp"
              android:orientation="horizontal">
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/ic_truck"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/deliveryFee"
                      android:text="FREE DELIVERY"/>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/codLay"
                  android:orientation="vertical">
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:src="@drawable/ic_correct"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Cash on Delivery"/>
              </LinearLayout>

          </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#F7EDED"
               android:layout_marginBottom="20dp"
               android:padding="5dp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#01A407"
                   android:text="In stock."
                   android:textSize="18sp"
                   android:id="@+id/stock"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/stockCount"
                   android:layout_marginStart="10dp"
                   android:layout_marginLeft="10dp"
                   android:text="Hurry! Only 5 item left!"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginBottom="10dp"
                   android:padding="5dp"
                   android:background="@drawable/text_field_gradient"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:text="Quantity: "
                       />
                   <EditText
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1"
                       android:layout_gravity="center"
                       android:inputType="number"
                       android:maxLength="1"
                       android:textSize="14sp"
                       android:padding="5dp"
                       android:gravity="center"
                       android:id="@+id/quantity"/>
               </LinearLayout>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:layout_weight="1"
                   android:id="@+id/BtnBuyNow"
                   android:background="@drawable/btn_bg1"
                   android:text="Buy Now"
                   android:layout_margin="5dp"
                   android:textAllCaps="false"/>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:layout_weight="1"
                   android:id="@+id/addToCart"
                   android:text="Add to cart"
                   android:background="@drawable/btn_bg2"
                   android:textColor="@color/colorBlack"
                   android:layout_margin="5dp"
                   android:textAllCaps="false"/>


           </LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="descriptiion"
               android:id="@+id/description"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:visibility="gone"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Reviews"
                   android:textSize="18sp"
                   android:textColor="@color/colorBlack"
                   android:textStyle="bold"/>

               <EditText
                   android:layout_width="match_parent"
             